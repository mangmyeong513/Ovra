# OVRA 환경변수 예시 (.env.example)
# 이 파일은 예시입니다. 실제 비밀값은 커밋하지 말고, .env 로 복사해 사용하거나
# Render(또는 Vercel/Neon) 대시보드의 Environment Variables에 설정하세요.

# --- 앱 기본 ---
NODE_ENV=development
PORT=5000
SESSION_SECRET=please-change-this-to-a-long-random-string

# --- 데이터베이스 (PostgreSQL) ---
# Render PostgreSQL 또는 Neon 연결 문자열
# 예) postgres://USER:PASSWORD@HOST:5432/DBNAME
DATABASE_URL=postgres://username:password@host:5432/dbname

# --- 프론트/백 분리 배포 시 ---
# 프론트(Vite)가 API를 호출할 기본 주소.
# 로컬 개발: 서버가 5000 포트에서 돌면 아래처럼 사용
VITE_API_BASE_URL=http://localhost:5000

# --- CORS(선택) ---
# 클라이언트가 다른 도메인일 때 허용할 오리진
CORS_ORIGIN=http://localhost:5173

# --- 선택 기능 (사용 시만 설정) ---
# OpenAI API 기능을 쓸 때
OPENAI_API_KEY=

